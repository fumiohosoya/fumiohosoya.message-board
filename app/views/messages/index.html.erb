<div class="panel panel-default">
 <div class="panel-heading">
  メッセージ一覧
  </div>
  
  <div class="panel-body">
   <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    (<%link_to "edit" , edit_message_path(message) %>
     <%=link_to "destroy" , message , method: :delete, data: { confirm: '消去してもよろしいですか？' } %>
    )
    <%= form_for(@message, html:{class:'form-horizontal'}) do |f| %>
    
 <div class="form-group">
  <%= f.label :name, "名前：", class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
   <%= f.text_area :name, class:'form-control' %>
  </div>
 </div>
 
  <div class="form-group">
  <%= f.label :body, "内容: ", class:'col-sm-2 control-label' %>
  <div class="col-sm-10">
  <%= f.text_area :body, class:'form-control' %>
  </div>
 </div>
 <div class="form-group">
  <div class="col-md-offset-2 col-md-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
 </div>
   <br> 
   <% end %>
  </div>
 </div>
 <% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
<% end %>